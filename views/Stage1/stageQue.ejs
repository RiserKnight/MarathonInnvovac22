<%- include('partials/header') %>
    <div class="quiz_box">
        <header>
            <div class="title">Question</div>
            <div class="timer">
                <div class="time_left_txt">Time Left</div>
                <div class="timer_sec">20</div>
            </div>
            <div class="time_line"></div>
        </header>
        <section>
            <div class="que_text">
                     <span><%=question%></span>
   
            </div>
            <div class="answer_list">
                <form id="stage1ques" action="/stage1/ques/submit/<%=qID%>" method="post">

                <input type="text" name="answer" id="answer">
                <button id="stage1submit" >Submit</button>
                
            </form>
                
            </div>
        </section>
        <!-- Wait Box -->
       
        <!-- footer of Quiz Box -->
        <footer>
            <div class="total_que">
                <span><%=sno%> of 12 Questions</span>
            </div>
        </footer>
    </div>
    <div class="wait_box">
        <div class="wait_title">Wait</div>
        <div class="timer">
            <div class="time_left_txt">Time Left</div>
            <div class="wait_sec">20</div>
        </div>
        <div class="icon">
            <i class="fas fa-crown"></i>
        </div>
    </div>  

    <!-- Result Box -->
   <div class="result_box">
      <div class="icon">
          <i class="fas fa-crown"></i>
      </div>
           <div class="complete_text">You've completed the Quiz!</div>
           <div class="score_text">
           <!-- Here I've inserted Score Result from JavaScript -->
      </div>
      <div class="buttons">
           <a href="/"><button class="quit">Quit Quiz</button></a>
      </div>
  </div>
    <%- include('partials/footer') %>
