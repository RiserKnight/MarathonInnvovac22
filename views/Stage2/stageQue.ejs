<%- include('partials/header') %>

<!-- Quiz Box -->
<div class="quiz_box">
    <header>
        <div class="title">Question</div>
        <div class="timer">
            <div class="time_left_txt">Time Left</div>
            <div class="timer_sec">15</div>
        </div>
        <div class="time_line"></div>
    </header>
    <form action="/stage2/ques/submit/<%=qID%>" id="stage2ques"  method="post">
    <section>
        <div class="que_text">
            <span><%=question%><br><%=qID%></</span>
            <!-- Here I've inserted question from JavaScript -->
        </div>
        <div class="option_list">
            <div class="option" id="option1"><span>Hyper Text Preprocessor</span></div>
            <div class="option" id="option2"><span>Hyper Text Markup Language</span></div>
            <div class="option" id="option3"><span>Hyper Text Multiple Language</span></div>
            <div class="option" id="option4"><span>Hyper Tool Multi Language</span></div>
            <!-- Here I've inserted options from JavaScript -->
        </div>
    </section>

    <!-- footer of Quiz Box -->
    <footer>
        <input type="text" name="user_ans" id="user_ans">
        <div class="total_que">
            <!-- Here I've inserted Question Count Number from JavaScript -->
        </div>
        <button type="submit" class="next_btn" id="nextBtn">Next Que</button>
    </footer>
    </form>
</div>

<%- include('partials/footer') %>